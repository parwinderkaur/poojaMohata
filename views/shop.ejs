<!-- shop section start -->
<div class="ast_shop_wrapper ast_toppadder70 ast_bottompadder70">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-md-9 col-sm-12 col-12">
        <div class="ast_shop_main">
          <div class="row">
            <% shop.forEach(function(item){ %>
              <div class="col-lg-4 col-md-6 col-sm-6 col-12">
                <div class="ast_product_section">
                  <div class="ast_product_image">
                    <a href="/shop-detail/<%= item._id %>">
                      <img src="<%= item.image ? item.image : '/images/content/Products/Gemstone.jpg' %>" class="img-responsive" alt="<%= item.title %>">
                    </a>
                  </div>
                  <div class="ast_product_info">
                    <h4 class="ast_shop_title">
                      <a href="/shop-detail/<%= item._id %>"><%= item.title %></a>
                    </h4>
                    <p>â‚¹<%= item.price %></p>
                    <div class="ast_info_bottom">
						<a href="https://wa.me/<%= settings.whatsappLink.replace('https://wa.me/', '') %>?text=<%= encodeURIComponent('Hello! I want to buy *' + item.title + '* from your store. Please confirm the order.') %>" 
							target="_blank" 
							class="ast_add_cart ast_btn">
							Book on WhatsApp
						</a>
					</div>
                  </div>
                </div>
              </div>
            <% }) %>

            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
				<div class="ast_pagination">
					<ul class="pagination">
						<% for(let i = 1; i <= totalPages; i++) { %>
						<li>
							<a href="/shop?page=<%= i %>" class="<%= currentPage === i ? 'active' : '' %>">
							<%= i %>
							</a>
						</li>
						<% } %>
					</ul>
				</div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- shop section end -->
